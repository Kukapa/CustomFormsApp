@model List<CustomFormsApp.Models.AnswerModel>

@{
    ViewData["Title"] = "View Answers";
}

<h1>View Answers</h1>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Question</th>
                <th>Your Answer</th>
                <th>Submitted At</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var answer in Model)
            {
                <tr>
                    <td>@answer.Question.Title</td>
                    <td>
                        @if (!string.IsNullOrEmpty(answer.AnswerText))
                        {
                            @answer.AnswerText
                        }
                        else if (answer.AnswerInteger.HasValue)
                        {
                            @answer.AnswerInteger.Value
                        }
                        else if (answer.AnswerBoolean.HasValue)
                        {
                            @answer.AnswerBoolean.Value
                        }
                        else
                        {
                            <text>No Answer Provided</text>
                        }
                    </td>
                    <td>@answer.SubmittedAt.ToString("g")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No answers submitted yet.</p>
}
