@model CustomFormsApp.Models.FormModel
@{
    ViewData["Title"] = "Form Submission Result";
}

<h2>Form Submission Result</h2>

<div>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Message:</strong> @Model.Message</p>
</div>

<a asp-action="Index" class="btn btn-primary">Submit Another Form</a>
