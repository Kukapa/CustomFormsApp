@model IEnumerable<CustomFormsApp.Models.FormModel>

<h2>Form Submissions</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Message</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var form in Model)
            {
                <tr>
                    <td>@form.Name</td>
                    <td>@form.Email</td>
                    <td>@form.Message</td>
                    <td>@form.DateFilled.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@form.FormId" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@form.FormId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No forms found.</p>
}
