@model AddQuestionViewModel

@{
    ViewData["Title"] = "Add Question";
}

<h2>Add Question</h2>

<form asp-action="AddQuestion" method="post">
    <input type="hidden" asp-for="TemplateId" />

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Type"></label>
        <select asp-for="Type" class="form-control">
            <option value="SingleLineString">Single-Line String</option>
            <option value="MultiLineText">Multi-Line Text</option>
      <!--  <option value="PositiveInteger">Positive Integer</option>
            <option value="Checkbox">Checkbox</option>  -->
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="form-check">
        <input asp-for="ShowInTable" class="form-check-input" type="checkbox" />
        <label asp-for="ShowInTable" class="form-check-label">Show in Table</label>
    </div>

    <button type="submit" class="btn btn-primary">Add Question</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
